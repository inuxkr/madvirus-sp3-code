<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="monitor" class="kame.spring.chap02.SystemMonitor"
		p:periodTime="10" p:sender-ref="smsSender" />

	<bean id="smsSender" class="kame.spring.chap02.SmsSender" />

	<bean name="writeArticleService" class="kame.spring.chap02.WriteArticleServiceImpl">
		<property name="articleDao">
			<ref bean="mysqlArticleDao" />
		</property>
	</bean>

	<bean name="mysqlArticleDao" class="kame.spring.chap02.MysqlArticleDao" />

	<bean id="processor" class="kame.spring.chap02.Processor">
		<lookup-method name="getCommandFactory" bean="commandFactory" />
	</bean>

	<bean id="commandFactory" class="kame.spring.chap02.CommandFactoryImpl" />

	<bean id="workerBean" class="kame.spring.chap02.Worker" scope="prototype">
		<aop:scoped-proxy />
	</bean>

	<bean id="executor" class="kame.spring.chap02.Executor">
		<property name="worker" ref="workerBean" />
	</bean>

	<bean name="customBeanFactoryPostProcessor" class="kame.spring.chap02.CustomBeanFactoryPostProcessor" />
	<bean name="customBeanPostProcessor" class="kame.spring.chap02.CustomBeanPostProcessor" />
</beans>
